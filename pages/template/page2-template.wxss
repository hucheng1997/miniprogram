.tmpContainer {
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #eee;
  margin:40rpx 0;
}

.avatar_date {
  padding: 5rpx;
}

.avatar_date image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 40rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.avatar_date text {
  font-size: 32rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 10rpx;
}

.contentImg {
  width: 100%;
  height: 400rpx;
}

.content {
  font-size: 32rpx;
  text-indent: 32rpx;
}
.collection_love{
  margin-bottom: 10rpx;
}
.collection_love image {
  width: 30rpx;
  height: 30rpx;
  border-radius: 40rpx;
  margin-right: 5rpx;
}

.collection_love text {
  font-size: 28rpx;
  color: #003e3e;
  margin-right: 20rpx;
}
