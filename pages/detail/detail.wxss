.detailContainer {
  display: flex;
  flex-direction: column;
 
}

.detailImg {
  width: 100%;
  height: 460rpx;
}
.musicImg{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 200rpx;
  left: 50%;
  margin-left: -30rpx;
}
.avatar_date {
  padding: 10rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 40rpx;
  vertical-align: middle;
}

.avatar_date text {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.title {
  font-size: 38rpx;
  font-weight: bold;
  margin-left: 10rpx;
}

.collection_share_contatiner {
  position: relative;
}

.collection_share {
  float: right;
  margin-left: 60rpx;
}

.collection_share image {
  height: 90rpx;
  width: 90rpx;
  margin-right: 20rpx;
}

.line {
  height: 2rpx;
  width: 90%;
  background-color: #eee;
  position: absolute;
  top: 45rpx;
  left: 5%;
  z-index: -1;
}
.content{
  margin-top: 30rpx;
  font-size: 32rpx;
  text-indent: 64rpx;

}